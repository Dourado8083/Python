num = int(input("Digite um número:"))
uni = num // 1 % 10
dez = num // 10 % 10
cent = num // 100 % 10
mil = num //1000 % 10 
print("Analisando o número {}".format(num))
print("Unidade: {}".format(uni))
print("Dezena:  {}".format(dez))
print("Centena: {}".format(cent))
print("Milhar:  {}".format(mil))
